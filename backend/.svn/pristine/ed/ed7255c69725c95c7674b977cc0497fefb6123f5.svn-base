<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
			http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
			http://www.springframework.org/schema/context
			http://www.springframework.org/schema/context/spring-context-4.1.xsd">

    <!--引入配置属性文件 -->
    <context:property-placeholder location="classpath:properties/*conf.properties" />
    <context:annotation-config />

    <!--自动扫描含有@Service将其注入为bean -->
    <!-- ExportWorks -->
    <context:component-scan base-package="com.yanxiu.util.core"/>

    <!-- Demo -->
    <context:component-scan base-package="com.yanxiu.demo.dao" />
    <context:component-scan base-package="com.yanxiu.demo.service" />

    <!-- workselect -->
    <context:component-scan base-package="com.yanxiu.workselect.dao" />
    <context:component-scan base-package="com.yanxiu.workselect.service" />

    <!-- passprt -->
    <context:component-scan base-package="com.yanxiu.passport.dao" />

    <!-- resource -->
    <context:component-scan base-package="com.yanxiu.resource.service" />

    <!-- school -->
    <context:component-scan base-package="com.yanxiu.school.dao" />

    <!-- area -->
    <context:component-scan base-package="com.yanxiu.area.dao" />

    <import resource="cache/applicationContext-cache-redis.xml" />
    <import resource="datasource/applicationContext-datasource-demo.xml" />
    <import resource="datasource/applicationContext-datasource-passport.xml" />
    <import resource="datasource/applicationContext-datasource-workselect.xml" />
    <import resource="datasource/applicationContext-datasource-school.xml" />
    <import resource="datasource/applicationContext-datasource-yanxiu.xml" />
    <import resource="datasource/applicationContext-datasource-area.xml" />
    <import resource="rpc/applicationContext-rpc-workselect.xml" />
</beans>
